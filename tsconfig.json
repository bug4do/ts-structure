{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "ES6",
      "DOM"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@controller/*": ["./src/controllers/*"],
      "@config": ["/config/config.json"]
    }
  }
}